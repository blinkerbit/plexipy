# PyRest Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# Framework Configuration
# ===========================================
PYREST_HOST=0.0.0.0
PYREST_PORT=8000
PYREST_DEBUG=false
PYREST_LOG_LEVEL=INFO

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# Microsoft Azure AD Configuration
# ===========================================
# Get these values from Azure Portal > Azure Active Directory > App registrations

# Your Azure AD tenant ID (Directory ID)
AZURE_AD_TENANT_ID=your-tenant-id-here

# Your application's client ID (Application ID)
AZURE_AD_CLIENT_ID=your-client-id-here

# Your application's client secret
AZURE_AD_CLIENT_SECRET=your-client-secret-here

# OAuth redirect URI (must match what's configured in Azure Portal)
AZURE_AD_REDIRECT_URI=http://localhost:8000/pyrest/auth/azure/callback

# OAuth scopes (space-separated)
AZURE_AD_SCOPES=openid profile email User.Read

# ===========================================
# TM1 On-Premise Configuration
# ===========================================
# Default TM1 instance (matches key in tm1_instances config)
TM1_DEFAULT_INSTANCE=default

# Default TM1 server settings (used with ${VAR:-default} in config.json)
TM1_DEFAULT_SERVER=localhost
TM1_DEFAULT_PORT=8010
TM1_DEFAULT_USER=admin
TM1_DEFAULT_PASSWORD=

# Production TM1 server (example)
TM1_PROD_SERVER=prod-tm1.company.com
TM1_PROD_PORT=8010
TM1_PROD_USER=
TM1_PROD_PASSWORD=

# ===========================================
# TM1 Cloud Configuration (IBM Planning Analytics)
# ===========================================
TM1_CLOUD_REGION=us-east
TM1_CLOUD_TENANT=your-tenant-id
TM1_CLOUD_API_KEY=your-api-key
TM1_CLOUD_INSTANCE=

# ===========================================
# Logging Configuration
# ===========================================
# Log directory (relative to project root)
LOG_DIR=logs
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Enable JSON logging format (for log aggregation systems)
LOG_JSON=false

# ===========================================
# Database Configuration (if needed by apps)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
