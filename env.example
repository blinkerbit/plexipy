# PyRest Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# Framework Configuration
# ===========================================
PYREST_HOST=0.0.0.0
PYREST_PORT=8000
PYREST_DEBUG=false
PYREST_LOG_LEVEL=INFO

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# Microsoft Azure AD Configuration
# ===========================================
# Get these values from Azure Portal > Azure Active Directory > App registrations

# Your Azure AD tenant ID (Directory ID)
AZURE_AD_TENANT_ID=your-tenant-id-here

# Your application's client ID (Application ID)
AZURE_AD_CLIENT_ID=your-client-id-here

# Your application's client secret
AZURE_AD_CLIENT_SECRET=your-client-secret-here

# OAuth redirect URI (must match what's configured in Azure Portal)
AZURE_AD_REDIRECT_URI=http://localhost:8000/pyrest/auth/azure/callback

# OAuth scopes (space-separated)
AZURE_AD_SCOPES=openid profile email User.Read

# ===========================================
# TM1 v12 Configuration (Primary Target)
# ===========================================
# Default TM1 v12 instance (matches key in tm1_config.json)
TM1_DEFAULT_INSTANCE=default

# Default TM1 v12 connection (basic authentication)
TM1_DEFAULT_BASE_URL=https://localhost:8010/api/v1
TM1_DEFAULT_INSTANCE=
TM1_DEFAULT_DATABASE=
TM1_DEFAULT_PASSWORD=

# Development TM1 v12 server
TM1_DEV_BASE_URL=https://localhost:8010/api/v1
TM1_DEV_INSTANCE=
TM1_DEV_DATABASE=
TM1_DEV_PASSWORD=

# ===========================================
# TM1 v12 Azure AD Configuration
# ===========================================
# Production TM1 v12 with Azure AD authentication
TM1_PROD_BASE_URL=https://tm1prod.company.com/api/v1
TM1_PROD_INSTANCE=
TM1_PROD_DATABASE=
TM1_PROD_TENANT_ID=
TM1_PROD_CLIENT_ID=
TM1_PROD_CLIENT_SECRET=
TM1_PROD_AUTH_URL=

# ===========================================
# TM1 v12 PAaaS Configuration (IBM Planning Analytics as a Service)
# ===========================================
TM1_PAAS_BASE_URL=
TM1_PAAS_IAM_URL=https://iam.cloud.ibm.com
TM1_PAAS_TENANT=
TM1_PAAS_INSTANCE=
TM1_PAAS_DATABASE=
TM1_PAAS_API_KEY=

# ===========================================
# Legacy TM1 Configuration (Pre-v12 - Deprecated)
# ===========================================
# Use these only for legacy TM1 installations
TM1_LEGACY_SERVER=localhost
TM1_LEGACY_PASSWORD=

# Legacy cloud configuration (use v12_paas instead)
TM1_CLOUD_REGION=us-east
TM1_CLOUD_TENANT=your-tenant-id
TM1_CLOUD_API_KEY=your-api-key
TM1_CLOUD_INSTANCE=

# ===========================================
# Logging Configuration
# ===========================================
# Log directory (relative to project root)
LOG_DIR=logs
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Enable JSON logging format (for log aggregation systems)
LOG_JSON=false

# ===========================================
# Database Configuration (if needed by apps)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
